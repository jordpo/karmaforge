      <% end %>
      <div class="reset_button"><button class="reset btn btn-warning">Reset</button></div>
    </div>
    <div id="intro">
      <button id="enter" class="btn-warning btn-lg">Enter the Forge</button>
    </div>
  </div>

    <div id="location" class="form-inline">
      <p>I'm forging karma for: </p>
      <%= form_for :location do |f| %>
        <%= f.text_field :city, placeholder: "City name", value: @location.city %>
        <%= f.text_field :state, placeholder: "State abbreviation", value: @location.state %>
        <%= f.submit "Next", class: "btn btn-info btn-lg" %>
      <% end %>
    </div>

  <div id="ebay-display">
    <h3 id="ebay-display-result">Here's the average price of the last 10 items sold on ebay matching your keywords (and an idea of market interest based on average # of bids).</h3>
    <button id="donate" class="btn btn-danger">Donate and Forge</button>
    <form id="ebay-button-form" action="http://www.ebay.com" method="get">
      <button id="sell" class="btn btn-primary">Sell</button>
    </form>
    <div class="reset_button"><button class="reset btn btn-warning">Reset</button></div>
  </div>

    <div id="item-search">
       <%= form_for :item do |f| %>
       <p>What do you need to get rid of?</p> </br>
       <p>Describe it!  Give a name, brand, condition, year...</p>
       <%= f.text_field :name, placeholder: "Enter item description" %>
       <%= f.submit "eBay", class: "btn btn-info btn-lg" %>
       <% end %>
      <div id="item_save_button">
        <button id="item_save" class="btn btn-success btn-lg">Results</button>
      </div>
      <div class="reset_button"><button class="reset btn btn-warning">Reset</button></div>
    </div>

    <div id="ebay-display">
      <h3 id="ebay-results">Here's the average price of the last 10 items sold on ebay that match your keywords. And, an idea of market interest based on the average number of bids. </h3>
